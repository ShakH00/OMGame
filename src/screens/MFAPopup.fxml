<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
      fx:controller="authentication.MFAPopupController"
      spacing="10" alignment="CENTER" style="-fx-background-color: #ffffff; -fx-padding: 20;">
    <Label text="Enter MFA Code" style="-fx-font-size: 16px; -fx-font-weight: bold;"/>
    <TextField fx:id="codeField" promptText="Enter code here" maxWidth="200"/>
    <Button text="Submit" onAction="#verifyCode" style="-fx-font-size: 14px;"/>
</VBox>