<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane id="drawScreenRoot" prefHeight="500.0" prefWidth="700.0" stylesheets="@draw_styles.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.WinScreenController">
    <children>
        <StackPane alignment="CENTER" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <children>
                <VBox alignment="CENTER" prefHeight="523.0" prefWidth="756.0" spacing="20.0">
                    <children>
                          <Text fx:id="drawText" smooth="false" styleClass="draw-text" text="YOU HAVE DRAWN" textAlignment="CENTER">
                              <font>
                                  <Font name="Press Start 2P Regular" size="12.0" />
                              </font>
                  </Text>

                        <HBox alignment="CENTER" cache="true" prefHeight="70.0" prefWidth="554.0" spacing="10.0" translateY="55.0">
                     <children>
                        <ImageView fitHeight="48.0" fitWidth="48.0" preserveRatio="true" smooth="false">
                           <image>
                              <Image url="@images/compass.png" />
                           </image>
                        </ImageView>
                                <Button fx:id="startOverBtn" alignment="TOP_LEFT" mnemonicParsing="false" onAction="#handleStartOver" prefHeight="40.0" prefWidth="254.0" styleClass="game-button" text="START OVER" textFill="WHITE">
                                    <font>
                                        <Font name="Press Start 2P Regular" size="15.0" />
                                    </font>
                        </Button>
                        <ImageView fitHeight="48.0" fitWidth="48.0" preserveRatio="true" smooth="false">
                           <image>
                              <Image url="@images/compass.png" />
                           </image>
                        </ImageView>
                     </children>
                        </HBox>


                        <VBox alignment="CENTER" prefHeight="100.0" prefWidth="628.0" spacing="5.0" translateY="10.0">
                            <children>

                                <Button fx:id="mainMenuBtn" alignment="TOP_LEFT" mnemonicParsing="false" onAction="#handleMainMenu" prefHeight="40.0" prefWidth="237.0" styleClass="game-button" text="MAIN MENU" />
                            </children>
                        </VBox>
                    </children>
                </VBox>
            </children>
        </StackPane>
    </children>
</AnchorPane>
