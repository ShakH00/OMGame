<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>

<AnchorPane id="winScreenRoot" prefHeight="500.0" prefWidth="700.0"
            stylesheets="@styles.css" xmlns="http://javafx.com/javafx/8.0.171"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.WinScreenController">
    <children>

        <StackPane alignment="CENTER" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <children>
                <VBox alignment="CENTER" spacing="30.0">
                    <children>
                        <Text styleClass="win-text" text="YOU WIN" textAlignment="CENTER" />


                        <ImageView fitHeight="48.0" fitWidth="48.0" preserveRatio="true" smooth="false">
                            <image>
                                <Image url="@images/lemon.png" />
                            </image>
                        </ImageView>

                        <Button fx:id="startOverBtn" mnemonicParsing="false" onAction="#handleStartOver"
                                prefHeight="40.0" prefWidth="200.0" styleClass="game-button" text="START OVER" />

                        <Button fx:id="mainMenuBtn" mnemonicParsing="false" onAction="#handleMainMenu"
                                prefHeight="40.0" prefWidth="200.0" styleClass="game-button" text="MAIN MENU" />
                    </children>
                </VBox>
            </children>
        </StackPane>
    </children>
</AnchorPane>